---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FadeIn from '../components/FadeIn.astro';
import ScaleIn from '../components/ScaleIn.astro';
import SlideIn from '../components/SlideIn.astro';
import HeroGradient from '../components/HeroGradient.astro';
import CallToAction from '../components/CallToAction.astro';
---

<BaseLayout title="会社概要 | シーテック株式会社">
  <Header />

  <!-- Hero -->
  <section class="pt-32 pb-16 px-6 bg-gradient-to-b from-slate-50 to-white relative overflow-hidden">
    <HeroGradient />

    <div class="max-w-7xl mx-auto relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <ScaleIn delay={0} from={0.9}>
          <div class="flex justify-center lg:justify-start">
            <img src="/assets/images/company/hero-illustration.png" alt="会社情報" class="w-48 h-auto" />
          </div>
        </ScaleIn>

        <SlideIn direction="right">
          <div>
            <p class="text-brand-teal text-xl mb-4"><strong>『企業のDX化』</strong></p>

            <h1 class="text-5xl sm:text-6xl md:text-7xl font-bold tracking-tight text-slate-900 mb-6">
              会社概要
            </h1>

            <p class="text-slate-600 text-lg mb-8" style="line-height: 2.4;">
              IoTテクノロジーを活かしたサービス、製品を<br />
              <strong>"スピーディー"</strong><br />
              <strong>"品質重視"</strong><br />
              にてご提供することで<br />
              <strong>"より豊かに"</strong><br />
              <strong>"より便利に"</strong><br />
              バージョンUPできるように目指します。
            </p>

            <div class="flex flex-col sm:flex-row gap-4">
              <a href="/recruit" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-brand-teal hover:bg-brand-teal-dark text-white text-base font-medium rounded-full transition-all shadow-xl shadow-brand-teal/25">
                採用情報
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
              <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-slate-100 hover:bg-slate-200 text-slate-900 text-base font-medium rounded-full transition-all">
                お問い合わせ
              </a>
            </div>
          </div>
        </SlideIn>
      </div>
    </div>
  </section>

  <!-- Company Info Cards -->
  <section class="py-20 px-6 bg-white">
    <div class="max-w-6xl mx-auto">
      <FadeIn>
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold mb-4 tracking-tight text-slate-900">会社基本情報</h2>
          <p class="text-lg text-slate-600">COMPANY INFO</p>
        </div>
      </FadeIn>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Card 1: 社名 -->
        <ScaleIn delay={0} from={0.95}>
          <div class="bg-slate-50 rounded-2xl p-6 border border-slate-100 hover:shadow-lg hover:shadow-brand-teal/5 transition-all">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-10 h-10 bg-brand-teal/10 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <h3 class="text-sm text-slate-600">社名</h3>
            </div>
            <p class="text-slate-900 font-semibold">シーテック株式会社</p>
          </div>
        </ScaleIn>

        <!-- Card 2: 設立 -->
        <ScaleIn delay={50} from={0.95}>
          <div class="bg-white rounded-2xl p-6 border border-slate-100 hover:shadow-lg hover:shadow-brand-teal/5 transition-all">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-10 h-10 bg-brand-teal/10 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="text-sm text-slate-600">設立</h3>
            </div>
            <p class="text-slate-900 font-semibold">2017年10月</p>
          </div>
        </ScaleIn>

        <!-- Card 3: 資本金 -->
        <ScaleIn delay={100} from={0.95}>
          <div class="bg-slate-50 rounded-2xl p-6 border border-slate-100 hover:shadow-lg hover:shadow-brand-teal/5 transition-all">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-10 h-10 bg-brand-teal/10 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h3 class="text-sm text-slate-600">資本金</h3>
            </div>
            <p class="text-slate-900 font-semibold">8,000万円</p>
          </div>
        </ScaleIn>

        <!-- Card 4: 役員 -->
        <ScaleIn delay={150} from={0.95}>
          <div class="bg-white rounded-2xl p-6 border border-slate-100 hover:shadow-lg hover:shadow-brand-teal/5 transition-all">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-10 h-10 bg-brand-teal/10 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <h3 class="text-sm text-slate-600">役員</h3>
            </div>
            <p class="text-slate-900 font-semibold">代表取締役　松江　芳夫</p>
          </div>
        </ScaleIn>

        <!-- Card 5: 社員数 -->
        <ScaleIn delay={200} from={0.95}>
          <div class="bg-slate-50 rounded-2xl p-6 border border-slate-100 hover:shadow-lg hover:shadow-brand-teal/5 transition-all">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-10 h-10 bg-brand-teal/10 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <h3 class="text-sm text-slate-600">社員数</h3>
            </div>
            <p class="text-slate-900 font-semibold">40名</p>
            <p class="text-xs text-slate-500 mt-1">2024年3月時点</p>
          </div>
        </ScaleIn>

        <!-- Card 6: 事業内容 -->
        <ScaleIn delay={250} from={0.95}>
          <div class="bg-white rounded-2xl p-6 border border-slate-100 hover:shadow-lg hover:shadow-brand-teal/5 transition-all">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-10 h-10 bg-brand-teal/10 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="text-sm text-slate-600">事業内容</h3>
            </div>
            <p class="text-slate-900 font-semibold">SI事業 / IoT事業 / AI事業</p>
          </div>
        </ScaleIn>
      </div>
    </div>
  </section>

  <!-- Access Section -->
  <section class="py-20 px-6 bg-slate-50">
    <div class="max-w-6xl mx-auto">
      <FadeIn>
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold mb-4 tracking-tight text-slate-900">アクセス</h2>
          <p class="text-lg text-slate-600">ACCESS</p>
        </div>
      </FadeIn>

      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Map with Lightbox -->
        <ScaleIn delay={0} from={0.95}>
          <div class="bg-white rounded-3xl shadow-xl shadow-slate-200/50 overflow-hidden border border-slate-100">
            <div class="relative group cursor-pointer" id="mapContainer">
              <img
                src="/assets/images/company/google-maps-1200x800.png"
                alt="アクセスマップ"
                class="w-full h-80 object-cover"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-all flex items-center justify-center">
                <div class="bg-white/90 backdrop-blur-sm rounded-xl px-6 py-3 shadow-lg opacity-0 group-hover:opacity-100 transition-all transform scale-95 group-hover:scale-100">
                  <p class="text-sm font-medium text-slate-900 flex items-center gap-2">
                    <svg class="w-5 h-5 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
                    </svg>
                    クリックして拡大
                  </p>
                </div>
              </div>
            </div>

            <div class="p-6">
              <div class="flex items-center gap-2 text-slate-700 mb-4">
                <svg class="w-5 h-5 text-brand-teal flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <p class="text-sm">
                  〒104-0033 東京都中央区新川1-14-5 金盃第三ビル7F
                </p>
              </div>

              <a
                href="https://www.google.com/maps/search/?api=1&query=シーテック株式会社+東京都中央区新川1-14-5"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-brand-teal hover:text-brand-teal-dark font-medium text-sm transition-colors"
              >
                Google Maps で見る
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            </div>
          </div>
        </ScaleIn>

        <!-- Transportation & Contact Info -->
        <div class="space-y-6">
          <!-- Transportation -->
          <ScaleIn delay={100} from={0.95}>
            <div class="bg-white rounded-2xl p-6 shadow-lg shadow-slate-200/30 border border-slate-100">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-brand-teal/10 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-slate-900">最寄り駅</h3>
              </div>
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <span class="w-2 h-2 bg-brand-teal rounded-full mt-2 flex-shrink-0"></span>
                  <div>
                    <p class="text-slate-900 font-medium">東京メトロ日比谷線「八丁堀駅」</p>
                    <p class="text-sm text-slate-600">徒歩3分</p>
                  </div>
                </li>
                <li class="flex items-start gap-3">
                  <span class="w-2 h-2 bg-brand-teal rounded-full mt-2 flex-shrink-0"></span>
                  <div>
                    <p class="text-slate-900 font-medium">JR京葉線「八丁堀駅」</p>
                    <p class="text-sm text-slate-600">徒歩3分</p>
                  </div>
                </li>
                <li class="flex items-start gap-3">
                  <span class="w-2 h-2 bg-brand-teal rounded-full mt-2 flex-shrink-0"></span>
                  <div>
                    <p class="text-slate-900 font-medium">都営大江戸線「門前仲町駅」</p>
                    <p class="text-sm text-slate-600">徒歩8分</p>
                  </div>
                </li>
              </ul>
            </div>
          </ScaleIn>

          <!-- Walking Route -->
          <ScaleIn delay={150} from={0.95}>
            <div class="bg-brand-teal/5 rounded-2xl p-6 border-2 border-brand-teal/20">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-brand-teal/10 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-slate-900">八丁堀駅からのルート</h3>
              </div>
              <ol class="space-y-2 text-sm text-slate-700">
                <li class="flex items-start gap-2">
                  <span class="w-5 h-5 bg-brand-teal text-white rounded-full flex items-center justify-center text-xs flex-shrink-0">1</span>
                  <span>八丁堀駅の「A3出口」を出て左折</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-5 h-5 bg-brand-teal text-white rounded-full flex items-center justify-center text-xs flex-shrink-0">2</span>
                  <span>直進し、最初の信号を右折</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-5 h-5 bg-brand-teal text-white rounded-full flex items-center justify-center text-xs flex-shrink-0">3</span>
                  <span>約150m直進すると「金盃第三ビル」が右側に見えます</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-5 h-5 bg-brand-teal text-white rounded-full flex items-center justify-center text-xs flex-shrink-0">4</span>
                  <span>7階にお越しください</span>
                </li>
              </ol>
            </div>
          </ScaleIn>

          <!-- Contact & Hours -->
          <ScaleIn delay={200} from={0.95}>
            <div class="bg-white rounded-2xl p-6 shadow-lg shadow-slate-200/30 border border-slate-100">
              <div class="grid grid-cols-2 gap-4">
                <!-- Phone -->
                <a href="tel:03-6228-8452" class="flex flex-col items-center justify-center p-4 bg-slate-50 rounded-xl hover:bg-slate-100 transition-colors">
                  <svg class="w-6 h-6 text-brand-teal mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <p class="text-xs text-slate-600">電話番号</p>
                  <p class="text-sm font-semibold text-slate-900">03-6228-8452</p>
                </a>

                <!-- Hours -->
                <div class="flex flex-col items-center justify-center p-4 bg-slate-50 rounded-xl">
                  <svg class="w-6 h-6 text-brand-teal mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <p class="text-xs text-slate-600">受付時間</p>
                  <p class="text-sm font-semibold text-slate-900">9:00-18:00</p>
                </div>
              </div>
              <p class="text-xs text-slate-500 text-center mt-3">※ 土日祝日休み</p>
            </div>
          </ScaleIn>
        </div>
      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="py-20 px-6 bg-white">
    <div class="max-w-7xl mx-auto">
      <FadeIn>
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold mb-6 tracking-tight text-slate-900">事業案内</h2>
        </div>
      </FadeIn>

      <div class="grid md:grid-cols-3 gap-8">
        <ScaleIn delay={0} from={0.9}>
          <a href="/solutions" class="group block">
            <div class="bg-gradient-to-b from-slate-50 to-white rounded-3xl p-8 border border-slate-200 hover:shadow-xl hover:shadow-brand-teal/10 transition-all h-full">
              <div class="w-14 h-14 bg-brand-teal/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                <svg class="w-7 h-7 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-slate-900">システムソリューション</h3>
              <p class="text-slate-600 leading-relaxed">
                システム開発、インフラ構築、システム運用保守など、お客様のDX推進を支援します。
              </p>
            </div>
          </a>
        </ScaleIn>

        <ScaleIn delay={100} from={0.9}>
          <a href="/products" class="group block">
            <div class="bg-gradient-to-b from-slate-50 to-white rounded-3xl p-8 border border-slate-200 hover:shadow-xl hover:shadow-brand-teal/10 transition-all h-full">
              <div class="w-14 h-14 bg-brand-teal/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                <svg class="w-7 h-7 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-slate-900">製品/サービス</h3>
              <p class="text-slate-600 leading-relaxed">
                Popohu、Pitopa、Pitoshiyu など、自社開発製品・サービスをご提供します。
              </p>
            </div>
          </a>
        </ScaleIn>

        <ScaleIn delay={200} from={0.9}>
          <a href="/ai" class="group block">
            <div class="bg-gradient-to-b from-brand-teal/5 to-white rounded-3xl p-8 border-2 border-brand-teal/20 hover:shadow-xl hover:shadow-brand-teal/20 transition-all h-full">
              <div class="w-14 h-14 bg-brand-teal/10 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                <svg class="w-7 h-7 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-slate-900">AI ソリューション</h3>
              <p class="text-slate-600 leading-relaxed">
                最新の AI 技術を活用したソリューションで、お客様のビジネスを変革します。
              </p>
            </div>
          </a>
        </ScaleIn>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CallToAction />

  <Footer />

  <!-- Lightbox for Map -->
  <script>
    const mapContainer = document.getElementById('mapContainer');
    mapContainer?.addEventListener('click', () => {
      const img = mapContainer.querySelector('img');
      const overlay = document.createElement('div');
      overlay.className = 'fixed inset-0 bg-black/90 z-50 flex items-center justify-center p-4 cursor-pointer';
      overlay.onclick = () => overlay.remove();

      const imgClone = img.cloneNode();
      imgClone.className = 'max-w-full max-h-full object-contain';
      imgClone.onclick = (e) => e.stopPropagation();

      const closeBtn = document.createElement('button');
      closeBtn.className = 'absolute top-4 right-4 text-white hover:text-slate-300';
      closeBtn.innerHTML = '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>';
      closeBtn.onclick = () => overlay.remove();

      overlay.appendChild(imgClone);
      overlay.appendChild(closeBtn);
      document.body.appendChild(overlay);
      document.body.style.overflow = 'hidden';
    });
  </script>
</BaseLayout>
