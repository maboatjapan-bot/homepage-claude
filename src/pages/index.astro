---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FadeIn from '../components/FadeIn.astro';
import ScaleIn from '../components/ScaleIn.astro';
import SlideIn from '../components/SlideIn.astro';
import NeuralSphere from '../components/3d/NeuralSphere.jsx';
import HeroGradient from '../components/HeroGradient.astro';
import TiltCard from '../components/TiltCard.astro';
import CallToAction from '../components/CallToAction.astro';
---

<BaseLayout>
  <Header />

  <!-- Hero Section -->
  <section class="pt-32 pb-24 px-6 bg-gradient-to-b from-teal-50/50 via-white to-white relative overflow-hidden">
    <!-- Modern Gradient Background -->
    <HeroGradient />

    <div class="max-w-5xl mx-auto text-center relative z-10">
      <!-- Badge -->
      <FadeIn delay={0}>
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-brand-teal/5 border border-brand-teal/10 rounded-full mb-8">
          <span class="w-1.5 h-1.5 bg-brand-teal rounded-full animate-pulse"></span>
          <span class="text-sm text-slate-600">AI で未来を構築する</span>
        </div>
      </FadeIn>

      <!-- Large Headline -->
      <FadeIn delay={100}>
        <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold tracking-tight text-slate-900 mb-6 leading-[1.05]">
          技術で<span class="gradient-text">未来</span>を<br>つなぐ
        </h1>
      </FadeIn>

      <!-- Subtitle -->
      <FadeIn delay={200}>
        <p class="text-xl sm:text-2xl text-slate-500 mb-12 max-w-3xl mx-auto leading-relaxed font-normal">
          最先端の AI 技術とプロフェッショナルなシステム開発で、<br class="hidden sm:block" />
          ビジネスの可能性を広げます。
        </p>
      </FadeIn>

      <!-- CTAs -->
      <FadeIn delay={300}>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/solutions" class="inline-flex items-center gap-2 px-8 py-4 bg-brand-teal hover:bg-brand-teal-dark text-white text-base font-medium rounded-full transition-all shadow-xl shadow-brand-teal/25">
            ソリューションを見る
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href="/products" class="inline-flex items-center gap-2 px-8 py-4 bg-slate-100 hover:bg-slate-200 text-slate-900 text-base font-medium rounded-full transition-all">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
            製品を見る
          </a>
        </div>
      </FadeIn>
    </div>
  </section>

  <!-- AI Hero Section - Featured -->
  <section class="py-32 px-6 bg-gradient-to-br from-brand-teal via-brand-teal to-brand-blue text-white relative overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-white/10 rounded-full blur-3xl translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-white/10 rounded-full blur-3xl -translate-x-1/2 translate-y-1/2"></div>

    <div class="max-w-7xl mx-auto relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <SlideIn direction="left">
          <div>
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur border border-white/20 rounded-full mb-8">
              <span class="w-1.5 h-1.5 bg-white rounded-full animate-pulse"></span>
              <span class="text-sm font-medium">Core Technology</span>
            </div>
            <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6 tracking-tight">
              AI ソリューション
            </h2>
            <p class="text-xl text-white/80 mb-8 leading-relaxed">
              当社の主力サービス。最先端の AI 技術で、お客様のビジネス課題を解決します。
            </p>
            <a href="/ai" class="inline-flex items-center gap-2 px-8 py-4 bg-white hover:bg-slate-50 text-slate-900 text-base font-semibold rounded-full transition-all shadow-xl">
              AI ソリューションを見る
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </SlideIn>
        <ScaleIn delay={200} from={0.8}>
          <div class="hidden lg:block h-[500px]">
            <NeuralSphere client:visible nodeCount={50} radius={2} />
          </div>
        </ScaleIn>
      </div>
    </div>
  </section>

  <!-- Products & Services - Brand blue background -->
  <section class="py-32 px-6 bg-blue-900 text-white">
    <div class="max-w-7xl mx-auto">
      <FadeIn>
        <div class="text-center mb-20">
          <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6 tracking-tight">
            製品・サービス
          </h2>
          <p class="text-xl text-slate-400 max-w-2xl mx-auto">
            お客様のニーズに合わせた最適なソリューション
          </p>
        </div>
      </FadeIn>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Products -->
        <ScaleIn delay={0} from={0.9}>
          <TiltCard>
            <a href="/products" class="premium-card group relative bg-gradient-to-b from-slate-800/50 to-slate-900/50 rounded-3xl p-10 border border-slate-700/50 glow-effect cursor-pointer block">
              <div class="w-16 h-16 bg-gradient-to-br from-brand-teal to-brand-blue rounded-2xl flex items-center justify-center mb-8 shadow-xl">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="text-2xl font-semibold mb-3">コンシューマー製品</h3>
              <p class="text-slate-400 mb-6 leading-relaxed">
                日常生活を豊かにするスマートデバイス。Popohu、Pitopa、Pitoshiyu。
              </p>
              <div class="flex items-center text-brand-teal font-medium">
                詳しく見る
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            </a>
          </TiltCard>
        </ScaleIn>

        <!-- Enterprise Solutions -->
        <ScaleIn delay={150} from={0.9}>
          <TiltCard>
            <a href="/solutions" class="premium-card group relative bg-gradient-to-b from-slate-800/50 to-slate-900/50 rounded-3xl p-10 border border-slate-700/50 glow-effect cursor-pointer block">
              <div class="w-16 h-16 bg-gradient-to-br from-brand-teal to-brand-blue rounded-2xl flex items-center justify-center mb-8 shadow-xl">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <h3 class="text-2xl font-semibold mb-3">エンタープライズ</h3>
              <p class="text-slate-400 mb-6 leading-relaxed">
                システム開発、インテグレーション、インフラ構築・運用。
              </p>
              <div class="flex items-center text-brand-teal font-medium">
                詳しく見る
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            </a>
          </TiltCard>
        </ScaleIn>
      </div>
    </div>
  </section>

  <!-- Stats - Gradient (blue to teal, seamless transition) -->
  <section class="py-24 px-6 bg-gradient-to-b from-blue-900 via-blue-800 to-brand-teal text-white">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-12">
        <ScaleIn delay={0}>
          <div class="text-center">
            <div class="text-5xl md:text-6xl font-bold gradient-text mb-2">500+</div>
            <div class="text-white/80">導入企業数</div>
          </div>
        </ScaleIn>
        <ScaleIn delay={100}>
          <div class="text-center">
            <div class="text-5xl md:text-6xl font-bold gradient-text mb-2">98%</div>
            <div class="text-white/80">顧客満足度</div>
          </div>
        </ScaleIn>
        <ScaleIn delay={200}>
          <div class="text-center">
            <div class="text-5xl md:text-6xl font-bold gradient-text mb-2">15年</div>
            <div class="text-white/80">実績</div>
          </div>
        </ScaleIn>
        <ScaleIn delay={300}>
          <div class="text-center">
            <div class="text-5xl md:text-6xl font-bold gradient-text mb-2">24/7</div>
            <div class="text-white/80">サポート体制</div>
          </div>
        </ScaleIn>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CallToAction />

  <Footer />
</BaseLayout>
