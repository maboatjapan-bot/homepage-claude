---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FadeIn from '../components/FadeIn.astro';
import ScaleIn from '../components/ScaleIn.astro';
import SlideIn from '../components/SlideIn.astro';
import PhotoCarousel from '../components/PhotoCarousel.astro';
import HeroGradient from '../components/HeroGradient.astro';
import CallToAction from '../components/CallToAction.astro';

// Photo data - Using original images from legacy website
const yearEndPartyPhotos = [
  { src: '/wp-content/uploads/2024/11/05-550x300.jpg', alt: '忘年会@上野 2023 - 照片1' },
  { src: '/wp-content/uploads/2024/11/01-550x300.jpg', alt: '忘年会@上野 2023 - 照片2' },
  { src: '/wp-content/uploads/2024/11/02-550x300.jpg', alt: '忘年会@上野 2023 - 照片3' },
];

const companyTripPhotos = [
  { src: '/wp-content/uploads/2024/11/07-550x300.png', alt: '社員旅行@伊豆 2024 - 照片1' },
  { src: '/wp-content/uploads/2024/11/06-2-550x300.png', alt: '社員旅行@伊豆 2024 - 照片2' },
  { src: '/wp-content/uploads/2024/11/IMG-13-550x300.jpg', alt: '社員旅行@伊豆 2024 - 照片3' },
  { src: '/wp-content/uploads/2024/11/05-1-550x300.png', alt: '社員旅行@伊豆 2024 - 照片4' },
];
---

<BaseLayout>
  <Header />


  <!-- Hero -->
  <section class="pt-32 pb-24 px-6 bg-gradient-to-br from-brand-teal via-brand-teal to-brand-blue relative overflow-hidden">
    <!-- Hero Gradient Background -->
    <HeroGradient />

    <div class="max-w-7xl mx-auto relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <ScaleIn delay={0} from={0.9}>
          <div class="flex justify-center lg:justify-start">
            <img src="/assets/images/recruitment/hero-illustration.png" alt="採用情報" class="w-64 h-auto" />
          </div>
        </ScaleIn>

        <SlideIn direction="right">
          <div>
            <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight mb-6 text-white">
              採用情報
            </h1>

            <p class="text-xl text-white mb-8 leading-relaxed" style="line-height: 2.4;">
              私たちは、常に新しい挑戦を求めるチームです。<br />
              お客様に寄り添い、企業様のバージョンアップを目指して<br />
              <strong>常に革新を求める姿勢</strong>で望みます。<br />
              そのためには様々なアイディア、視点、考えを必要としています。<br />
              あなたのアイデアとエネルギーを活かし、共に革新を追求しましょう。<br />
              私たちと一緒に、未来を切り拓きませんか？
            </p>

            <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white hover:bg-slate-50 text-brand-teal text-base font-medium rounded-full transition-all shadow-xl">
              応募する
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </SlideIn>
      </div>
    </div>
  </section>

  <!-- Company Atmosphere -->
  <section class="pt-20 py-24 px-6 bg-white">
    <div class="max-w-7xl mx-auto">
      <FadeIn>
        <div class="text-center mb-16">
          <h2 class="text-4xl sm:text-5xl font-bold mb-6 tracking-tight text-slate-900">
            Our Company Atmosphere
          </h2>
          <p class="text-xl text-slate-600">我が社はこんな感じです♪</p>
        </div>
      </FadeIn>

      <!-- Year-end Party -->
      <ScaleIn delay={0} from={0.95}>
        <div class="mb-20">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-12 h-12 bg-brand-teal/10 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 15.5458C20.2661 15.8483 19.4693 16 18.6364 16C15.3554 16 12.6364 13.3556 12.6364 10.1818C12.6364 9.24115 12.8326 8.34382 13.1893 7.52511C11.4774 8.59013 10.3636 10.3569 10.3636 12.3636C10.3636 15.5374 13.0827 18.1818 16.3636 18.1818C18.6723 18.1818 20.6891 16.9405 21.8667 15.0878L21 15.5458Z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3L12 5M12 19L12 21M5.63605 5.63605L7.05027 7.05027M16.9497 16.9497L18.364 18.364M3 12L5 12M19 12L21 12M5.63605 18.364L7.05027 16.9497M16.9497 7.05027L18.364 5.63605"/>
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-semibold text-slate-900">忘年会@上野</h3>
              <p class="text-slate-600">2023</p>
            </div>
          </div>

          <PhotoCarousel
            photos={yearEndPartyPhotos}
            id="year-end-party"
          />
        </div>
      </ScaleIn>

      <!-- Company Trip -->
      <ScaleIn delay={100} from={0.95}>
        <div>
          <div class="flex items-center gap-4 mb-8">
            <div class="w-12 h-12 bg-brand-teal/10 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-brand-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-semibold text-slate-900">社員旅行@伊豆</h3>
              <p class="text-slate-600">2024</p>
            </div>
          </div>

          <PhotoCarousel
            photos={companyTripPhotos}
            id="company-trip"
          />
        </div>
      </ScaleIn>
    </div>
  </section>

  <!-- CTA -->
  <CallToAction />

  <Footer />
</BaseLayout>
